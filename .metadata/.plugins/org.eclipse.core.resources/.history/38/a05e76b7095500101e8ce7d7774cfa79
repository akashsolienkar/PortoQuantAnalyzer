				setExpectedReturn(stats[0]);
			    setVolatility(stats[1]);

		    
		    } catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			} // 1 year back

		    // Estimate μ and σ from prices
		    		}
